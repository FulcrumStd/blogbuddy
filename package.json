{
  "name": "blogbuddy",
  "displayName": "Blog Buddy",
  "description": "Your AI-powered blog writing sidekick that makes Markdown magic happen!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Writing"
  ],
  "activationEvents": ["onLanguage:markdown"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blogbuddy.showMainMenu",
        "title": "Show Main Menu"
      }
    ],
    "keybindings": [
      {
        "command": "blogbuddy.showMainMenu",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BlogBuddy",
      "properties": {
        "blogbuddy.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API密钥",
          "order": 1
        },
        "blogbuddy.model": {
          "type": "string",
          "enum": ["gpt-3.5-turbo", "gpt-4", "gpt-4-turbo"],
          "default": "gpt-3.5-turbo",
          "description": "使用的AI模型",
          "order": 2
        },
        "blogbuddy.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "AI生成文本的创造性程度 (0-2)",
          "order": 4
        },
        "blogbuddy.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "AI处理后自动保存文件",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
