{
  "name": "blogbuddy",
  "displayName": "Blog Buddy",
  "description": "Your AI-powered blog writing sidekick that makes Markdown magic happen!",
  "version": "0.0.7",
  "icon": "images/icon.png",
  "publisher": "FulcrumStudio",
  "repository": {
    "url": "https://github.com/FulcrumStd/blogbuddy.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blogbuddy.menu",
        "title": "Show BB menu"
      },
      {
        "command": "blogbuddy.bb",
        "title": "Hi BB"
      },
      {
        "command": "blogbuddy.toggleDocumentInfo",
        "title": "Toggle Document Info Display"
      }
    ],
    "keybindings": [
      {
        "command": "blogbuddy.menu",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "blogbuddy.bb",
        "key": "ctrl+b ctrl+b",
        "mac": "cmd+b cmd+b",
        "when": "editorTextFocus"
      },
      {
        "command": "blogbuddy.toggleDocumentInfo",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Blog Buddy",
      "properties": {
        "blogbuddy.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key",
          "order": 1
        },
        "blogbuddy.baseURL": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1",
          "description": "Base Url",
          "order": 2
        },
        "blogbuddy.model": {
          "type": "string",
          "default": "openai/gpt-5-mini",
          "description": "Model name",
          "order": 3
        },
        "blogbuddy.smallModel": {
          "type": "string",
          "default": "",
          "description": "Small model for simple tasks (uses main model if not set)",
          "order": 4
        },
        "blogbuddy.streaming": {
          "type": "boolean",
          "default": true,
          "description": "BB generate content using streaming.",
          "order": 5
        },
        "blogbuddy.documentInfoDisplay": {
          "type": "boolean",
          "default": false,
          "description": "Show document information (word count) next to cursor",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "openai": "^5.12.2"
  }
}